<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/view2"
    android:layout_centerHorizontal="true"
    android:innerRadius="0dp"
    android:shape="ring"
    android:thicknessRatio="1.9"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="2dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_location_user_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher_background"/>

            <LinearLayout
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_location_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="KARAM Mohamed"
                        android:textSize="13sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/item_location_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="April 20, 2017 at 06;40"
                        android:textSize="10sp" />
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_weight="1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/flesh"/>


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/item_location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image name"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/black"/>


        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_location_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>











    </LinearLayout>




</android.support.v7.widget.CardView>